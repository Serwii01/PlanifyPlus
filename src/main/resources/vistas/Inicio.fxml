<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.planify.planifyplus.controller.InicioController">

    <!-- Header top -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 16; -fx-background-color: #F2F4F8;">
            <!-- Logo y nombre -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fx:id="logoImage" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true"/>
                <Label text="PlanifyPlus" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #1563e2;"/>
            </HBox>
            <Region fx:id="headerSpacer" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchBar" promptText="Buscar actividades..." style="-fx-pref-width: 340;"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnRegister" text="Registrarse" onAction="#handleRegister"/>
                <Button fx:id="btnLogin" text="Iniciar sesi칩n" onAction="#handleLogin"/>
                <Label fx:id="lblCiudad" text="Madrid" style="-fx-font-size: 15; -fx-text-fill: #4B4B4B;" visible="false"/>
                <Label fx:id="lblUser" text="Sergio Fern치ndez" style="-fx-font-size: 15; -fx-font-weight: bold;" visible="false"/>
                <Button fx:id="btnLogout" text="Cerrar sesi칩n" onAction="#handleLogout" visible="false"/>
                <Button fx:id="btnCrearActividad" text="Crear Actividad" onAction="#handleCrearActividad" style="-fx-background-color: #60A5FA; -fx-text-fill: white;" visible="false"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main content split: actividades comunidad (izq) y usuario (der) -->
    <center>
        <GridPane hgap="40" vgap="0" style="-fx-padding: 32;">
            <!-- IZQUIERDA: Actividades comunidad -->
            <VBox fx:id="actividadesComunidadBox" GridPane.columnIndex="0" spacing="16">
                <Label text="Actividades de la Comunidad" style="-fx-font-size: 19; -fx-text-fill: #1663e3;"/>
                <ScrollPane fx:id="scrollActividadesComunidad" fitToWidth="true" style="-fx-background-color: transparent;">
                    <VBox fx:id="contenedorComunidad" spacing="15"/>
                </ScrollPane>
            </VBox>
            <!-- DERECHA: Actividades usuario/creadas -->
            <VBox fx:id="actividadesUsuarioBox" GridPane.columnIndex="1" spacing="16">
                <Label text="Mis Actividades Creadas" style="-fx-font-size: 19; -fx-text-fill: #1663e3;"/>
                <StackPane fx:id="usuarioPanel">
                    <Label fx:id="lblNoSesion" text="Inicia sesi칩n para ver tus actividades"
                           style="-fx-font-size: 16; -fx-text-fill: #999;" alignment="CENTER"/>
                    <ScrollPane fx:id="scrollActividadesUsuario" fitToWidth="true" style="-fx-background-color: transparent;" visible="false">
                        <VBox fx:id="contenedorUsuario" spacing="15"/>
                    </ScrollPane>
                </StackPane>
            </VBox>
        </GridPane>
    </center>
</BorderPane>

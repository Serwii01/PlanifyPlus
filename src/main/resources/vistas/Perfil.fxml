                    <!-- Tarjeta del calendario -->
                    <VBox spacing="8"
                          style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-padding: 16; -fx-border-color: #E5E7EB; -fx-border-radius: 20;">

                        <!-- Cabecera: mes / aÃ±o + flechas -->

                                <Text text="We"/>   <!-- Wednesday -->
                                <Text text="Th"/>   <!-- Thursday -->
                                <Text text="Fr"/>   <!-- Friday -->
                                <Text text="Sa"/>   <!-- Saturday -->
                                <Text text="Su"/>   <!-- Sunday -->
                            </children>
                        </HBox>

                        <!-- Grid de dÃ­as del mes (lo rellena el controlador) -->

                                            onAction="#onExplorarActividades"
                                            style="-fx-background-color: #4C8DF6; -fx-text-fill: white; -fx-background-radius: 24; -fx-cursor: hand;"
                                            prefWidth="280.0" prefHeight="44.0">
                                        <font>
                                            <Font size="16.0"/>
                                        </font>
                                    </Button>
                                </children>
                            </VBox>

                        </children>
                    </Pane>

                    <Region VBox.vgrow="ALWAYS"/>

                </children>
            </VBox>

            <!-- COLUMNA DERECHA: CALENDARIO -->
            <VBox spacing="12" prefWidth="420.0">
                <children>

                    <!-- TÃ­tulo -->
                    <Label text="Calendario de Actividades">
                        <font>
                            <Font size="18.0"/>

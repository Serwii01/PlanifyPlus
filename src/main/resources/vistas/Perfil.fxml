                    <children>
                        <Label fx:id="lblNombreUsuario" text="Nombre de Usuario">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblEmailUsuario" text="correo@ejemplo.com"

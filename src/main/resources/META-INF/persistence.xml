<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="planifyPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- === ENTIDADES (DTOs) === -->
        <class>com.planify.planifyplus.dto.UsuarioDTO</class>
        <class>com.planify.planifyplus.dto.ActividadDTO</class>
        <class>com.planify.planifyplus.dto.IncripcionDTO</class>
        <class>com.planify.planifyplus.dto.TipoActividad</class>

        <!-- === CONFIGURACIÓN DE CONEXIÓN === -->
        <properties>
            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/planifyplus"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>


            <!-- HIBERNATE -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- OPCIONAL: para detectar entidades automáticamente -->
            <!-- <property name="hibernate.archive.autodetection" value="class"/> -->
        </properties>
    </persistence-unit>
</persistence>
